@model IEnumerable<MicrDbChequeProcessingSystem.Models.Status>

@{
    var statuses = Model?.ToList() ?? new List<MicrDbChequeProcessingSystem.Models.Status>();
    ViewData["Title"] = "Statuses";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Operational Statuses</h5>
            <small class="text-muted">@statuses.Count options available.</small>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Status</th>
                        <th scope="col">Created</th>
                        <th scope="col">Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @if (statuses.Any())
                    {
                        foreach (var status in statuses)
                        {
                            <tr>
                                <td class="fw-semibold">@status.StatusName</td>
                                <td>@status.CreatedDate.ToString("dd MMM yyyy")</td>
                                <td>@status.CreatedByUser?.Fullname</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5">
                                <i class="bi bi-clipboard-data display-6 text-muted"></i>
                                <p class="mt-3 mb-0 text-muted">No statuses configured yet.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
