@model IEnumerable<MicrDbChequeProcessingSystem.Models.RegionZone>

@{
    var regions = Model?.ToList() ?? new List<MicrDbChequeProcessingSystem.Models.RegionZone>();
    ViewData["Title"] = "Regions";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Regional Coverage</h5>
            <small class="text-muted">@regions.Count regions configured.</small>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Region</th>
                        <th scope="col">Created</th>
                        <th scope="col">Created By</th>
                        <th scope="col">Banks</th>
                        <th scope="col">Branches</th>
                    </tr>
                </thead>
                <tbody>
                    @if (regions.Any())
                    {
                        foreach (var region in regions)
                        {
                            var banksCount = region.Banks.Count;
                            var branchesCount = region.Banks.Sum(b => b.BankBranches.Count);
                            <tr>
                                <td class="fw-semibold">@region.RegionName</td>
                                <td>@(region.CreatedDate?.ToString("dd MMM yyyy") ?? "â€”")</td>
                                <td>@region.CreatedByUser?.Fullname</td>
                                <td>@banksCount</td>
                                <td>@branchesCount</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <i class="bi bi-geo display-6 text-muted"></i>
                                <p class="mt-3 mb-0 text-muted">No regions configured yet.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
