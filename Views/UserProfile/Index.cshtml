@model IEnumerable<MicrDbChequeProcessingSystem.Models.UserProfile>

@{
    var users = Model?.ToList() ?? new List<MicrDbChequeProcessingSystem.Models.UserProfile>();
    ViewData["Title"] = "User Profiles";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">User Directory</h5>
            <small class="text-muted">@users.Count users registered.</small>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Username</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Approved Status</th>
                        <th scope="col">Active</th>
                        <th scope="col">Created</th>
                        <th scope="col">Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @if (users.Any())
                    {
                        foreach (var user in users)
                        {
                            <tr>
                                <td class="fw-semibold">@user.Username</td>
                                <td>@user.Fullname</td>
                                <td>@user.EmailAddress</td>
                                <td>@user.ApprovedStatus?.ApprovalStatusName</td>
                                <td>
                                    @if (user.IsEnabled ?? false)
                                    {
                                        <span class="badge bg-success-subtle text-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary">Disabled</span>
                                    }
                                </td>
                                <td>@user.CreatedDate.ToString("dd MMM yyyy")</td>
                                <td>@user.CreatedByUser?.Fullname</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="bi bi-person-badge display-6 text-muted"></i>
                                <p class="mt-3 mb-0 text-muted">No user profiles have been created.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
