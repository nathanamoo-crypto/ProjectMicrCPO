    <script>
        const sidebar = document.getElementById("sidebar");
        const desktopToggle = document.getElementById("desktopToggle");
        const mobileToggle = document.getElementById("mobileToggle");
        const body = document.body;
        const SIDEBAR_PIN_KEY = "apex-sidebar-pinned";

        const isMobile = () => window.innerWidth <= 992;

        function readPinnedState() {
            try {
                return localStorage.getItem(SIDEBAR_PIN_KEY) === "true";
            } catch {
                return false;
            }
        }

        function writePinnedState(value) {
            try {
                localStorage.setItem(SIDEBAR_PIN_KEY, value);
            } catch {
                /* ignore storage issues */
            }
        }

        let isPinned = readPinnedState();

        function applySidebarState() {
            if (isMobile()) {
                body.classList.remove("sidebar-pinned", "sidebar-expanded");
                return;
            }

            if (isPinned) {
                body.classList.add("sidebar-pinned", "sidebar-expanded");
            } else {
                body.classList.remove("sidebar-pinned");
                body.classList.remove("sidebar-expanded");
            }
        }

        function expandSidebar() {
            if (isMobile() || isPinned) {
                return;
            }

            body.classList.add("sidebar-expanded");
        }

        function collapseSidebar() {
            if (isMobile() || isPinned) {
                return;
            }

            body.classList.remove("sidebar-expanded");
        }

        sidebar?.addEventListener("mouseenter", expandSidebar);
        sidebar?.addEventListener("mouseleave", collapseSidebar);

        desktopToggle?.addEventListener("click", () => {
            if (isMobile()) {
                return;
            }

            isPinned = !isPinned;
            writePinnedState(isPinned);
            applySidebarState();
        });

        function toggleMobileMenu() {
            if (!sidebar) {
                return;
            }

            const opened = !sidebar.classList.contains("mobile-open");
            sidebar.classList.toggle("mobile-open", opened);
            body.classList.toggle("sidebar-expanded", opened);
        }

        mobileToggle?.addEventListener("click", toggleMobileMenu);

        window.addEventListener("resize", () => {
            if (!sidebar) {
                return;
            }

            if (isMobile()) {
                sidebar.classList.remove("mobile-open");
            }

            applySidebarState();
        });

        document.querySelectorAll('.nxl-link').forEach(link => {
            link.addEventListener('click', () => {
                if (isMobile()) {
                    sidebar?.classList.remove('mobile-open');
                    body.classList.remove("sidebar-expanded");
                }
            });
        });

        function clearStuckOverlays() {
            if (!document.querySelector('.modal.show')) {
                document.body.classList.remove('modal-open');
            }

            document.body.classList.remove('blur-active', 'backdrop-active');
            document.body.style.removeProperty('padding-right');
            document.body.style.removeProperty('overflow');

            document.querySelectorAll('.modal-backdrop, .nxl-overlay, .offcanvas-backdrop').forEach(el => el.remove());

            ['.nxl-container', '.nxl-header', '.site-header', '#mainContent'].forEach(selector => {
                document.querySelectorAll(selector).forEach(el => {
                    el.style.filter = '';
                    el.style.backdropFilter = '';
                });
            });
        }

        document.addEventListener('hidden.bs.modal', clearStuckOverlays);

        document.addEventListener('shown.bs.modal', () => {
            document.querySelectorAll('.modal-backdrop:not(.show)').forEach(el => el.remove());
        });

        applySidebarState();
        clearStuckOverlays();

        document.addEventListener('DOMContentLoaded', () => {
            applySidebarState();
            clearStuckOverlays();
        });
    </script>
</body>
</html>
