@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var dashboardVm = ViewData["DashboardSummary"] as MicrDbChequeProcessingSystem.Controllers.DashboardVm;

    Func<string, string?, string> navClass = (controller, action) =>
    {
        var controllerMatch = string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase);
        if (!controllerMatch)
        {
            return "nxl-link";
        }

        if (string.IsNullOrEmpty(action))
        {
            return "nxl-link active";
        }

        return string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase)
            ? "nxl-link active"
            : "nxl-link";
    };

    var pageLabel = currentController switch
    {
        "Home" => "Dashboard",
        "Bank" => "Banks",
        "BankBranch" => "Bank Branches",
        "CustomerProfile" => "Customer Profiles",
        "AccountType" => "Account Types",
        "BookType" => "Cheque Books",
        "NumberOfLeaflet" => "Leaflet Counts",
        "Currency" => "Currencies",
        "Region" => "Regions",
        "TransactionCode" => "Transaction Codes",
        "ApprovalStatus" => "Approval Statuses",
        "Status" => "Statuses",
        "UserProfile" => "User Profiles",
        _ => currentController ?? string.Empty
    };
}
