@model IEnumerable<MicrDbChequeProcessingSystem.Models.AccountType>

@{
    var accountTypes = Model?.ToList() ?? new List<MicrDbChequeProcessingSystem.Models.AccountType>();
    ViewData["Title"] = "Account Types";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Account Type Catalog</h5>
            <small class="text-muted">@accountTypes.Count records available.</small>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Name</th>
                        <th scope="col">Created</th>
                        <th scope="col">By</th>
                    </tr>
                </thead>
                <tbody>
                    @if (accountTypes.Any())
                    {
                        foreach (var accountType in accountTypes)
                        {
                            <tr>
                                <td class="fw-semibold">@accountType.AccountTypeCode</td>
                                <td>@accountType.AccountTypeName</td>
                                <td>@accountType.CreatedDate.ToString("dd MMM yyyy")</td>
                                <td>@accountType.CreatedByUser?.Fullname</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <i class="bi bi-card-text display-6 text-muted"></i>
                                <p class="mt-3 mb-0 text-muted">No account types have been configured yet.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
